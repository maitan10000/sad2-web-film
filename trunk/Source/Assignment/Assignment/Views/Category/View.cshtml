<div id="new-film">
    <ul class="thumbnails">
        @foreach (var film in Model.FilmOfThisCategory)
        {
            <li class="span4">
                <div class="thumbnail">
                    <center>
                        <a href="/Film/View/@film.ID">
                            <img src="@film.Poster" alt="" />
                        </a>
                        <h5>
                            @if (film.ShortTitle.Length > 19)
                           { 
                                @Html.Raw(film.ShortTitle.Substring(0, 15) + "...");
                           }
                           else
                           { 
                                @Html.Raw(film.ShortTitle);
                           }</h5>
                    </center>
                </div>
            </li>
        }
    </ul>
</div>
